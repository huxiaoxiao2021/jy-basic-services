<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jdl.basic.provider.core.dao.kaCoefficientConfig.KaCoefficientConfigDao">
    <resultMap id="BaseResultMap" type="com.jdl.basic.provider.core.po.KaCoefficientConfigPO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="merchant_code" jdbcType="INTEGER" property="merchantCode"/>
        <result column="merchant_name" jdbcType="VARCHAR" property="merchantName"/>
        <result column="coefficient" jdbcType="DECIMAL" property="coefficient"/>
        <result column="statue" jdbcType="VARCHAR" property="statue"/>
        <result column="statue_name" jdbcType="INTEGER" property="statueName"/>
        <result column="create_user" jdbcType="VARCHAR" property="createUser"/>
        <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
        <result column="update_user" jdbcType="VARCHAR" property="updateUser"/>
        <result column="update_user_name" jdbcType="VARCHAR" property="updateUserName"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="ts" jdbcType="TIMESTAMP" property="ts"/>
        <result column="yn" jdbcType="TINYINT" property="yn"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        merchant_code,
        merchant_name,
        coefficient,
        statue,
        statue_name,
        create_user,
        create_user_name,
        update_user,
        update_user_name,
        create_time,
        update_time,
        yn,
        ts
    </sql>

    <insert id="addAll" keyColumn="id" keyProperty="id"
            parameterType="com.jdl.basic.provider.core.po.KaCoefficientConfigPO" useGeneratedKeys="true">
        insert into ka_coefficient_config
        (
            merchant_code,
            merchant_name,
            coefficient,
            statue,
            statue_name,
            create_user,
            create_user_name,
            update_user,
            update_user_name,
            create_time,
            update_time
        )values
        (
            #{merchantCode},
            #{merchantName},
            #{coefficient},
            #{statue},
            #{statueName},
            #{createUser},
            #{createUserName},
            #{updateUser},
            #{updateUserName},
            #{createTime},
            #{updateTime}
        )
    </insert>


    <update id="modifyCoefficient">
        update ka_coefficient_config
            set coefficient = #{coefficient}
        where
            id = #{id}
    </update>
    <delete id="delById">
        update ka_coefficient_config
            set yn = 0

        where
            id = #{id}
    </delete>

    <select id="selectByMerchantCodeAndStatus" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"/>
        from ka_coefficient_config
        where
        <if test="merchantCode != null and merchantCode != ''">
            merchant_code = #{merchantCode,jdbcType=VARCHAR}
        </if>
        <if test="status != null and status != ''">
            status = #{status,jdbcType=VARCHAR}
        </if>
        ORDER BY update_time DESC LIMIT #{offset},#{pageSize}

    </select>


    <select id="getTotalCount" resultType="java.lang.Integer">
        select
            count(1) as num
        from ka_coefficient_config
        where
        <if test="merchantCode != null and merchantCode != ''">
            merchant_code = #{merchantCode,jdbcType=VARCHAR}
        </if>
        <if test="status != null and status != ''">
            status = #{status,jdbcType=VARCHAR}
        </if>
    </select>


</mapper>