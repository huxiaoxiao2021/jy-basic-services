<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="LOG.PATH">/export/home/tomcat/logs/jy-basic-provider</Property>
        <Property name="LOG.PATTERN">%d{yyyy-MM-dd HH:mm:ss} %-5p %c %M:%L - %m%n</Property>
        <Property name="LOG.FILE.PRENAME">jy-basic-provider</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG.PATTERN}"/>
        </Console>

        <!-- info -->
        <RollingRandomAccessFile name="infoFile" fileName="${LOG.PATH}/${LOG.FILE.PRENAME}-info.log"
                                 filePattern="${LOG.PATH}/${LOG.FILE.PRENAME}-info.%i.log"
                                 bufferSize="8192" immediateFlush="false" append="true">
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="${LOG.PATTERN}" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="50"/>
        </RollingRandomAccessFile>

        <!-- error -->
        <RollingRandomAccessFile name="errorFile" fileName="${LOG.PATH}/${LOG.FILE.PRENAME}-error.log"
                                 filePattern="${LOG.PATH}/${LOG.FILE.PRENAME}-error.%i.log"
                                 bufferSize="1024" immediateFlush="false" append="true">
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="${LOG.PATTERN}" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <!--自定义：过滤掉spring和mybatis的一些无用的DEBUG信息-->
        <logger name="java.sql" level="ERROR" additivity="true"/>
        <logger name="java.sql.ResultSet" level="ERROR" additivity="true"/>
        <logger name="org.apache" level="ERROR" additivity="true"/>
        <logger name="org.apache.ibatis" level="ERROR" additivity="true"/>
        <logger name="org.springframework" level="ERROR" additivity="true"/>
        <logger name="org.apache.commons" level="ERROR" additivity="true"/>
        <logger name="com.jd.common" level="ERROR" additivity="true"/>
        <logger name="com.jd.coo.jdbcp" level="ERROR" additivity="true"/>
        <logger name="io.netty" level="ERROR" additivity="true"/>
        <logger name="org.mybatis.spring"  level="ERROR" additivity="true"/>
        <logger name="org.hibernate.validator" level="ERROR" additivity="true"/>
        <logger name="com.jd.jddl" level="ERROR" additivity="true"/>
        <logger name="com.jd.lsb" level="ERROR" additivity="true"/>
        <logger name="com.jd.jsf" level="ERROR" additivity="true"/>
        <logger name="com.jd.jmq" level="ERROR" additivity="true"/>
        <logger name="com.jd.coo.sa.sequence" level="ERROR" additivity="true"/>
        <AsyncRoot level="DEBUG">
            <AppenderRef ref="console" />
            <AppenderRef ref="infoFile"/>
            <AppenderRef ref="errorFile"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
